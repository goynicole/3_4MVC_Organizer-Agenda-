@model List<Organizer.Models.Broker>
@{
    ViewBag.Title = "ListBrokers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 5%;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 bg-info p-3">Liste des courtiers</h2>
            @Html.ActionLink("Ajouter un courtier", "AddBroker", "Broker", new { @class = "btn btn-outline-primary mb-2" })
            <div class="table-responsive mt-3">
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Mail</th>
                        <th>Numéro de téléphone</th>
                        <th>Détail</th>
                    </tr>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Lastname</td>
                            <td>@customer.Firstname</td>
                            <td>@customer.Mail</td>
                            <td>@customer.PhoneNumber</td>
                            <td>@Html.ActionLink("Detail", "ProfilBroker", "Broker", new { id = customer.BrokerID }, new { @class = "btn btn-outline-dark" })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


