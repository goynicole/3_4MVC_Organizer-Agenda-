@model Organizer.Models.Broker
@{
    ViewBag.Title = "AddBroker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 5%;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 bg-info p-3">Ajouter un courtier</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.Lastname, new { @class = "col-md-10 control-label text-white" })
                    @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lastname)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Firstname, new { @class = "col-md-10 control-label text-white" })
                    @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Firstname)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Mail, new { @class = "col-md-10 control-label text-white" })
                    @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mail, "Format mail Obligatoire!", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber, new { @class = "col-md-10 control-label text-white" })
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber)
                </div>
                <input type="submit" name="Ajouter" class="btn btn-default btn-outline-info">
            }
        </div>
    </div>
</div>
